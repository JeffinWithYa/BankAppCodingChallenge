<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">


    <TextView
        android:id="@+id/txview_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Date"
        />

    <TextView
        android:id="@+id/txview_trans_descrip"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txview_date"
        android:text="Description"
        android:gravity="center"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    />

    <TextView
        android:id="@+id/tx_view_trans_amount"
        android:layout_width="206dp"
        android:layout_height="52dp"
        android:layout_below="@+id/txview_date"
        android:layout_toEndOf="@+id/txview_trans_descrip"
        android:text="Amount"
        android:gravity="center"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
    />
</RelativeLayout>